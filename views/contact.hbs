<body>
  <section class="contact-section">
    <div class="contact-overlay"></div>
      <div class="contact__form">
        <div class="contact__container">
          <!-- aca va la form -->
          <form action="/contact" method="post" class="form-container">
            <h3>Let's inmortalize moments together</h3>
            <div class="input">
              <input type="text" name="name" class="input__in" />
              <label class="input__label" for="">Full name</label>
              <span class="input__span">Full name</span>
            </div>
            <div class="input">
              <input type="text" name="email" class="input__in" />
              <label class="input__label" for="">Email</label>
              <span class="input__span">Email</span>
            </div>
            <div class="input">
              <input type="text" name="subject" class="input__in" />
              <label class="input__label" for="">Subject</label>
              <span class="input__span">Subject</span>
            </div>
            <div class="input">
              <textarea name="message" class="input__in textarea" id="textarea"></textarea>
              <label class="input__label input__label-textarea" for="">Message</label>
              <span class="input__span">Message</span>
            </div>
            <div class="btn-container">
              <button type="submit" class="contact__btn">Send</button>
              <div>
                <p class="contact-msg">{{message}}</p>
              </div>
            </div>
          </form>
        </div>
        <div class="contact__info">
          <div class="contact__info-cont">
            <h4 class="subtitle contact__info-sub">You can also find us here!</h4>
            <p class="contact__info-bullets"><i class="fas fa-envelope"></i>narciso@photography.com</p>
            <p class="contact__info-bullets"><i class="fas fa-phone"></i>(+54) 1122334455</p>
            <p class="contact__info-bullets"><i class="fas fa-map-marker-alt"></i>Cabildo y Congreso, Belgrano. </p>
          </div>
        </div>
      </div>
  </section>
  <script src="javascripts/form.js"></script>
</body>